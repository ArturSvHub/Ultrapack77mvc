@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor accessor
@using Ultrapack77mvc.Utility.Extentions

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ultrapack77mvc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" asp-append-version="true"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" asp-append-version="true">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/all.min.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/slider-style.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/style-mobile.css" asp-append-version="true"/>
    <link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
</head>
<body class="body">
  <div class="wrapper">
    <header class="header">
      <div class="header__container">
        <div class="header__info">
          <div class="header__info-first">
                        @if (accessor.HttpContext.Session.Get<List<ShoppingCart>>(WebConstants.SessionCart) != null)
                        {
                            <a asp-action="Index" asp-controller="Cart" class="nav-link">
                                @{
                                    var count = accessor.HttpContext.Session.Get<List<ShoppingCart>>(WebConstants.SessionCart).Count;
                                }
                                <i class="fas fa-shopping-cart"></i>&nbsp;(@count)
                            </a>
                        }else
                        {
                            <a href="#" class="nav-link"><i class="fas fa-shopping-cart"></i>&nbsp;(0)</a>
                        }
                        <div class="header__info-text left">
              <p>Рабочее время офиса в Екатеринбурге 9.00 - 18.00 по местному времени.</p>
            </div>
            <div class="header__info-number left"><a href="tel:+79222081799">+7(922)2081799</a></div>
          </div>
          <div class="header__info-logo">
            <a href="" class="header__logo">
              <img src="~/img/logo.png" alt="">
            </a>
          </div>
          <div class="header__info-second">
            <div class="header__info-text right">Рабочее время офиса в Москве 10.00 - 19.00.  Доставка по всей России.</div>
            <div class="header__info-number right"><a href="tel:+79299633918">+7(929)9633918</a></div>
          </div>
        </div>
        <div class="header__body">
          <input type="checkbox" id="burger">
          <label for="burger"
            onclick="this.classList.toggle('opened');this.setAttribute('aria-expanded', this.classList.contains('opened'))"
            aria-label="Main Menu">
            <svg width="70" height="70" viewBox="0 0 100 100">
              <path class="line line1"
                d="M 20,29.000046 H 80.000231 C 80.000231,29.000046 94.498839,28.817352 94.532987,66.711331 94.543142,77.980673 90.966081,81.670246 85.259173,81.668997 79.552261,81.667751 75.000211,74.999942 75.000211,74.999942 L 25.000021,25.000058" />
              <path class="line line2" d="M 20,50 H 80" />
              <path class="line line3"
                d="M 20,70.999954 H 80.000231 C 80.000231,70.999954 94.498839,71.182648 94.532987,33.288669 94.543142,22.019327 90.966081,18.329754 85.259173,18.331003 79.552261,18.332249 75.000211,25.000058 75.000211,25.000058 L 25.000021,74.999942" />
            </svg>
          </label>
          <nav class="header__menu">
            <ul class="header__list">
              <li>
                <a asp-action="Home" class="header__link">Главная</a>
              </li>
              <li>
                <a asp-action="Services" class="header__link">Услуги</a>
              </li>
              <li>
                <a asp-action="Wiki" class="header__link">О продукции</a>
              </li>
              <li>
                <a asp-action="Providers" class="header__link">Поставщикам</a>
              </li>
              <li>
                <a asp-action="About" class="header__link">О компании</a>
              </li>
              <li>
                <a asp-action="Contacts" class="header__link">Контакты</a>
              </li>
            </ul>
          </nav>
        </div>
      </div>
    </header>
    <div class="content">
            @RenderBody()
    </div>

        <footer class="footer">
      <div class="footer__wrapper">
        <div class="footer__social">
          <p>ЕЖЕДНЕВНО с 10 до 19</p>
        <p class="footer__number"><a href="tel:+79299633918">+7(929)963-39-18</a></p>
          <span>Присоединяйтесь</span>
          <div class="footer__social-icons">
            <div class="footer__social-icon">
              <a href=""><img src="~/img/vk.png" alt="vk"></a>
            </div>
            <div class="footer__social-icon">
              <a href=""><img src="~/img/whatsapp.png" alt="what"></a>
            </div>
            <div class="footer__social-icon">
              <a href=""><img src="~/img/telegram.png" alt="tele"></a>
            </div>
            <div class="footer__social-icon">
              <a href=""><img src="~/img/instagram.png" alt="inst"></a>
            </div>
          </div>
        </div>
        <div class="footer__links">
          <p>Быстрые ссылки</p> 
            <li><a asp-action="Home">Главная</a></li>
            <li><a asp-action="Services">Услуги</a></li>
            <li><a asp-action="Wiki">О продукции</a></li>
            <li><a asp-action="Providers">Поставщикам</a></li>
            <li><a asp-action="About">О компании</a></li>
            <li><a asp-action="Contacts">Контакты</a></li>
          </ul>
        </div>
        <div class="footer__form">
          <form action="" method="post">
            <div class="mb-3">
              <label for="footer__form-emailimput" class="form-label">Ваша почта: </label>
              <input type="email" class="form-control" id="footer__form-emailimput" placeholder="name@yandex.ru">
            </div>
            <div class="mb-3">
              <label for="footer__form-textarea" class="form-label">Пишите нам: </label>
              <textarea class="form-control" id="footer__form-textarea" rows="3"></textarea>
            </div>
          </form>
        </div>
      </div>
      <div class="footer__logo">
        <a href="" class="header__logo">
          <img src="~/img/logo.png" alt="">
        </a>
      </div>
      <div class="footer__copy">
        <a href="#"><i>&copy;</i>2022 Sveshnikov Artur </a>
      </div>
    </footer>
      </div>
     <script src="~/js/slider.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://api-maps.yandex.ru/2.1/?apikey=dc7cefd4-24aa-428f-9f98-475058bcbf26&lang=ru_RU&load=Geolink"
    type="text/javascript"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/tabs.js" asp-append-version="true"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
     <script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
     <script src="~/js/summernote-ru-RU.js"></script>
     <script src="https://kit.fontawesome.com/a0128a8feb.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
