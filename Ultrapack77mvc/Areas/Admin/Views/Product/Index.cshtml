@model IEnumerable<Ultrapack77mvc.Models.Product>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Список товаров</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                Добавить Товар
            </a>
        </div>
    </div>

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Название товара
                    </th>
                    <th>
                        Краткре Описание Товара
                    </th>
                    <th>
                        Категория
                    </th>
                    <th>
                        Закупочная цена
                    </th>
                    <th>
                        Розничная Цена
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.ShortDesc</td>
                        <td>@item.Category</td>
                        <td>@item.PurchasePrice</td>
                        <td>@item.RetailPrice</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Product" asp-route-Id="@item.Id" asp-action="Upsert" class="btn btn-primary">
                                    <i class="fa-solid fa-square-sliders-vertical"></i> Изменить товар
                                </a>
                                <a asp-controller="Product" asp-route-Id="@item.Id" asp-action="Delete" class="btn btn-danger">
                                    <i class="fa-solid fa-delete-left"></i> Удалить товар
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Нет товаров</p>
    }
</div>